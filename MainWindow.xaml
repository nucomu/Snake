<Window x:Name="Hauptfenster" x:Class="Snake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake"
        mc:Ignorable="d"
        Title="HaLuz Snake" Height="371" Width="425" KeyDown="Window_KeyDown" WindowStartupLocation="CenterScreen">
    <Grid>
        <Canvas x:Name="myCanvas">
            <Label x:Name="Statistics" Content="Label" Canvas.Left="10" Canvas.Top="10"/>
            <Label x:Name="End" Content="Label" Canvas.Left="10" Canvas.Top="265"/>
            <Label x:Name="Allpoints" Content="Gesamtpunkte: 0" Canvas.Left="10" Canvas.Top="300"/>
            <Label x:Name="Newpoints" Content="+0" Canvas.Left="150" Canvas.Top="300"/>
            <Label x:Name="PointsPerFood" Content="points per food: " Canvas.Left="250" Canvas.Top="300"/>
            <Button x:Name="Highscore" Content="Highscore" Height="26" Canvas.Left="341" Canvas.Top="10" Width="56" Click="Highscore_Click"/>
        </Canvas>

    </Grid>
</Window>
